    @model DDAC.Models.Login

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    if (@ViewBag.Message != null)
    {
        <div style="border:1px solid red"></div>
    }
    <br /><br /><br />
     <table align="center">
            <tr>
                <td>@Html.Label("Username: ")</td>
                <td>@Html.TextBoxFor(a => a.Username)</td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(a => a.Username, "", new { @class = "text-danger" })</td>
            </tr>
              
           
            <tr>
                <td>@Html.Label("Password: ") </td >
                <td>@Html.PasswordFor(a => a.Password)</td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })</td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td></td>
                <td align="center"><input type="submit" value="Login" /></td>
            </tr>
            <tr>
                <td></td>
                <td align="center">@Html.ActionLink("New User?", "Register")</td>
            </tr>
                
     </table >
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
